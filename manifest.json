{
  "manifest_version": 3,
  "name": "Supasync",
  "version": "0.1.0",
  "description": "Converts UTC datetimes in Supabase table view to user-selected timezones.",
  "author": "Mahesh Sundaram",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.supabase.com/*", "*://*.supabase.co/*"],
      "js": ["content.js"]
    }
  ]
}
